<h1 class="heading">Guest Log</h1>

<div class="center">
    <a href="/guest/new">
        <button>
            Guest Sign In
        </button>
    </a>
</div>

<div class="title-bar">
    <h4>Name</h4>
    <h4>Sign In</h4>
    <h4>Sign Out</h4>
    <button>
        <p>
            Sign Guest Out
        </p>
    </button>
</div>

<div class="container">
    {{#each allGuest}}
        <a href="/guest/{{_id}}">
            <div class="title-bar">
                <p>{{guestName}}</p>
                <p>{{signIn}}</p>
                <p>{{signOut}}</p>
                <button>
                    <p>
                        Sign Guest Out
                    </p>
                </button>
            </div>
        </a>
    {{/each}}
</div>
