<h1>Guest Details</h1>

<form action="/guest" method="POST">
    <input type="text" name="name" placeholder="Guest Name">
    <input type="text" name="location" placeholder="Company Name">
    <input type="datetime-local" name="logIn" placeholder="Time In">
    <input type="datetime-local" name="logOut" placeholder="Time Out">
    <input type="text" name="reasonForVisit" placeholder="Reason For Visit">

    <input type="submit" value="Submit">
</form>